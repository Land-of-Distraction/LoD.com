{% comment %}
<!-- Author windsor@1r - Utility pages -->
<!-- /templates/page.liquid -->
{% endcomment %}
<div class="page-wrapper page-utility">

	<div class="content-wrapper">
		
		{% if linklists.utility-sidebar.links.size > 0 %}
		<nav class="utility-menu">
			{% for link in linklists.utility-sidebar.links %}
		       {% if link.active %}<div class="selected-link">{{ link.title }}</div>{% endif %}
		    {% endfor %}
			<ul>
			{% for link in linklists.utility-sidebar.links %}
		        <li><a href="{{ link.url }}" {% if link.active %}class="active"{% endif %}>{{ link.title }}</a></li>
		    {% endfor %}
			</ul>
		</nav><!-- .utility-menu -->
		{% endif %}

	    <div class="page-content">

	    	<h1 class="page-title">{{ page.title }}</h1>
	        
		    {% comment %}
		    Regular page content goes here.
		    Adds trashy code cleanup
		    {% endcomment %}
	        
	        {% assign page_content = page.content
	        					 | replace: '<span></span>', ''
	        					 | replace: '<p></p>', ''
	        					 | replace: '<meta charset="utf-8" />', ''
	                             | replace: '<p><span>[tab_title]</span></p>', '[tab_title]'
	                             | replace: '<p>[tab_title]</p>', '[tab_title]'
	                             | replace: '<p><span>[/tab_title]</span></p>', '[/tab_title]'
	                             | replace: '<p>[/tab_title]</p>', '[/tab_title]'
	                             | replace: '<p><span>[tab_content] </span></p>', '[tab_content]'
	                             | replace: '<p><span>[tab_content]</span></p>', '[tab_content]'
	                             | replace: '<p>[tab_content]</p>', '[tab_content]'
	                             | replace: '<p><span>[/tab_content]</span></p>', '[/tab_content]'
	                             | replace: '<p>[/tab_content]</p>', '[/tab_content]'
	                             | replace: '[tab_title]', '<div class="tab-toggle">'
	                             | replace: '[/tab_title]', '</div>'
	                             | replace: '[tab_content]', '<div class="tab-content"><div class="tab-inner">'
	                             | replace: '[/tab_content]', '</div></div>' %}

	        {{ page_content }}

	    </div><!-- .page-content -->

	</div><!-- .content-wrapper -->
</div><!-- .page-wrapper -->
{% comment %}
<!-- .page-wrapper.page-utility -->
{% endcomment %}