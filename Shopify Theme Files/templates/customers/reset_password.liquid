{% comment %}
<!-- Password reset page -->
<!-- /templates/reset_password.liquid -->
{% endcomment %}
<div class="login-page reset-password">
    <div class="inner-content">

        <div class="form-reset-password form-lod">
            {% form 'reset_customer_password' %}

            <h1>{{ 'customer.reset_password.title' | t }}</h1>
            <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

            {{ form.errors | default_errors }}

            <div class="form-fields">
                <label for="ResetPassword" class="label-hidden">
                    {{ 'customer.reset_password.password' | t }}
                </label>
                <input type="password"
                       name="customer[password]"
                       id="ResetPassword"
                       class="input-field {% if form.errors contains 'password' %}input-error{% endif %}"
                       placeholder="{{ 'customer.reset_password.password' | t }}">

                <label for="PasswordConfirmation" class="label-hidden">
                    {{ 'customer.reset_password.password_confirm' | t }}
                </label>
                <input type="password"
                       name="customer[password_confirmation]"
                       id="PasswordConfirmation"
                       class="input-field {% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
                       placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
            </div><!-- .form-fields -->
            <div class="account-actions">
                <input type="submit" class="cta-white" value="{{ 'customer.reset_password.submit' | t }}">
            </div>

            {% endform %}
        </div><!-- .form-reset-password -->

    </div><!-- .inner-content -->
</div><!-- .login-page -->